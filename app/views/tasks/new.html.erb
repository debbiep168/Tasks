<h1>New Task</h1>

<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :task_name %><br>
    <%= form.text_field :task_name %>
  </p>

  <p>
    <%= form.label :comments %><br>
    <%= form.text_area :comments %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Go Back to Home', tasks_path %>
